<!Doctype html>

<html>

<head>
    <title>List of Ads</title>
</head>

<body>    
    <h1>List of Ads</h1>
    <%if(isMember)
    {%>
    <button class="btnAction" id="home" onclick="window.location.href = '/member/index';">
        Back to Home Page
    </button>
    <%}
    else{%>
    <button class="btnAction" id="home" onclick="window.location.href = '/admin/index';">
    Back to Home Page
    </button>    
    <%}%>
    <table>
        <thead>
            <tr>
                <th>Image</th>
                <th>Title </th>
                <th>Description</th>
                <th>Time Created</th>
                <%if(isMember)
                    {
                        %>                  
                <th colspan="3">Actions</th>
                <%}
                else{%>
                <th>Actions</th> 
                <%}%>                       
            </tr>
        </thead>
        <tbody>
            <% if(taskData.length> 0 )
                {
                taskData.forEach(function (data){
                %>
                <tr>
                    <% var imgUrl = "/media/"+data._id+"."+data.image%>
                    <td>
                        <img src=<%=imgUrl%>>
                    </td>
                    <td>
                        <%=data.title%>
                    </td>
                    <td>
                        <%=data.description%>
                    </td>
                    <td>
                        <% var dObj=new Date(data.createdDateTime) 
                        var date=dObj.getDate()+"/"+(dObj.getMonth()+1)+"/"+dObj.getFullYear()+" "+ dObj.getHours()+":"+dObj.getMinutes()+":"+dObj.getSeconds() %>
                            <%=date%>
                    </td>                 
                    <%if(isMember)
                    {
                        %>
                        <td>                        
                            <button class="btnAction" onclick="window.location.href = '/member/editAd/<%=data._id%>/';">
                                Edit Ad
                            </button>
                        </td>
                        <td>                        
                            <button class="btnAction" onclick="window.location.href = '/member/reuploadImg/<%=data._id%>/';">
                               Re-upload Image
                            </button>
                        </td>
                        <td>                        
                            <button class="btnAction" onclick="window.location.href = '/member/deleteAd/<%=data._id%>/';">
                                Delete Ad
                            </button>
                        </td>
                    <%}
                    else{%>
                    
                    <td>                        
                        <button class="btnAction" onclick="window.location.href = '/admin/requestDetailsView/<%=data._id%>/';">
                            Request for more information
                        </button>
                    </td>                   
                <%}%>
                </tr>
                <% }) } %>
        </tbody>
    </table>

</body>
<style>
    html,body{overflow-y: scroll; }
    img{
        width: 194px;
        height: 125px;
        margin-left: -57px
    }
    html {
        width: 100%;
        height: 100%;
        overflow: hidden;
    }
    body {
        width: 100%;
        height: 100%;
        font-family: 'Open Sans', sans-serif;
        background: steelblue;
    }
    h1 {
        background: cornsilk;
        font-family: -webkit-pictograph;
        text-align: center;
        height: 50px;
        width : 100%;
        border: 5px solid #092756;
    }
    h2 {
        background-color: crimson;
        text-align: center;
        color: white;
        height: 50px;
        margin: 0px 0px 0px 0px;
    }
    table {
        border-collapse: collapse;
        width: 100%;
        table-layout: fixed;
    }
    td {
        border: 1px solid black;
        height: 40px;
        padding-left: 60px;
        font-weight: 700;
    }
    th {
        border: 1px solid black;
        height: 40px;
        background-color: darkgray;
    }
    tbody tr {
        background-color: #f2f2f2;
        height: 60px;
    }
    div .num {
        display: inline-block;
        background-color: aliceblue;
        width: 32%;
