<!Doctype html>

<html>

<head>
    <title>List of products</title>
</head>

<body>    
    <h1>All Ads</h1>    
    <button class="btnAction" id="home" onclick="window.location.href = '/guest';">
    Back to Home Page
    </button> 
   
    <table>
        <thead>
            <tr>
                <th>Title </th>
                <th>Description</th>
                <th>Time Created</th>                
                <th>Actions</th>                                     
            </tr>
        </thead>
        <tbody>
            <% if(taskData.length> 0 )
                {
                taskData.forEach(function (data){
                %>
                <tr>
                    <td>
                        <%=data.title%>
                    </td>
                    <td>
                        <%=data.description%>
                    </td>
                    <td>
                        <% var dObj=new Date(data.createdDateTime) 
                        var date=dObj.getDate()+"/"+(dObj.getMonth()+1)+"/"+dObj.getFullYear()+" "+ dObj.getHours()+":"+dObj.getMinutes()+":"+dObj.getSeconds() %>
                            <%=date%>
                    </td>
                    <td>                        
                        <button class="btnAction" onclick="window.location.href = '/guest/viewFullDetails/<%=data._id%>';">
                            View Full Details
                        </button>
                    </td>
                </tr>
                <% }) } %>
        </tbody>
    </table>

</body>
