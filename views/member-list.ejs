<!Doctype html>

<html>

<head>
    <title>List of Members</title>
</head>

<body>    
    <h1>List of Members</h1>
    <button class="btnAction" id="home" onclick="window.location.href = '/admin/index';">
        Back to Home Page
    </button>    
    
    <table>
        <thead>
            <tr>
                <th>Name </th>
                <th>Email</th>
                <th>Contact</th>                  
                <th>Actions</th>                        
            </tr>
        </thead>
        <tbody>
            <% if(memberData.length> 0 )
                {
                    memberData.forEach(function (data){
                %>
                <tr>
                    <td>
                        <%=data.name%>
                    </td>
                    <td>
                        <%=data.email%>
                    </td>
                    <td>
                        <%=data.mobile%>
                    </td>
                    <td>
                        <button class="btnAction" onclick="window.location.href = '/admin/viewfulldetails/<%=data._id%>/';">
                            View Full Details
                        </button>
                    </td>                   
                    
                </tr>
                <% }) } %>
        </tbody>
    </table>

</body>
<style>
    html,body{overflow-y: scroll; }
    html {
        width: 100%;
        height: 100%;
        overflow: hidden;
    }
    body {
        width: 100%;
        height: 100%;
        font-family: 'Open Sans', sans-serif;
        background: steelblue;
    }
    h1 {
        background: cornsilk;
        font-family: -webkit-pictograph;
        text-align: center;
        height: 50px;
        width : 100%;
        border: 5px solid #092756;
    }
    h2 {
        background-color: crimson;
        text-align: center;
        color: white;
        height: 50px;
        margin: 0px 0px 0px 0px;
    }
    table {
        border-collapse: collapse;
        width: 100%;
        table-layout: fixed;
    }
    td {
        border: 1px solid black;
        height: 40px;
        padding-left: 60px;
        font-weight: 700;
    }
    th {
        border: 1px solid black;
        height: 40px;
        background-color: darkgray;
    }
    tbody tr {
        background-color: #f2f2f2;
        height: 60px;
    }
    div .num {
        display: inline-block;
        background-color: aliceblue;
        width: 32%;
        height: 80px;
        font-size: 25px;
        font-weight: 900;
        border: solid 8px powderblue;
        margin-top: -23px;
    }
    p{
        margin-left: 70px;
    }
    .btnAction {
        background-color: darkslategrey;
        border: none;
        color: white;
        padding: 15px 35px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin-right: 13px;
        cursor: pointer;
        border-radius: 50px;
    }
    #home {
        float: left;
        margin-top: -73px;
        height: 41px;
        border-radius: 35px;
        background-color: powderblue;
        font-weight: 700;
        width: 202px;
        margin-left: 10px;
        color: black;
    }
</style>

</html>